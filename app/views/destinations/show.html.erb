<div class="container">
  <div class=" well col-sm-6">
    <h3>Food Travel Story</h3>

    <p>Title: <%=@destination.title%></p>
    <p>Location: <%=@destination.location%></p>

    <ul>
    <% @destinations.food.each do |food| %>
      <li><%= food.name %></li>
      <li><%= food.category %></li>
    <% end %>
    </ul>

    <p>Content: <%=@destination.content%></p>
    <p>Recommendations: <%=@destination.recommendation%></p>
  </div>
</div>
