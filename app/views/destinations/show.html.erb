<div class="container">
  <div class=" well col-sm-6">
    <h3>Food Travel Story</h3>

    <p>Title: <%=@destination.title%></p>
    <p>Location: <%=@destination.location%></p>
    <p>Name: <%=@food.name%></p>
    <p>Type of Food: <%=@food.category%></p>

    <p>Content: <%=@destination.content%></p>
    <p>Recommendations: <%=@destination.recommendation%></p><br>

    <h4>Add a comment:</h4>
      <%= form_for @destination.comments.build do |f| %>
      <%= f.hidden_field :destination_id %>
      <%= f.hidden_field :user_id %>
        <%= f.fields_for :user, @destination.comments.last.build_user do |user_fields| %>
          <p><strong>Name</strong><%= user_fields.text_field :name, class: 'form-control' %></p>
        <% end %>
        <p><strong>Content</strong> <%= f.text_area :content, class: 'form-control' %></p>
        <%= f.submit %>
      <% end %><br>

    <p>Comments: <br>
      <% @destination.comments.each do |comment| %>
        <li><%= comment.user.name %> says: <%= comment.content %></li>
      <% end %>
    </p>

  </div>

</div>
