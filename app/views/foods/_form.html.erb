<div class="container">
  <div class=" well col-sm-6">
    <h2>Create Your Food Travel Story</h2>
    <%= form_for(@food) do |f| %>
      Food Name: <%= f.text_field :name %><br>
      Type of Food:<%= f.text_field :category %><br>

      <%= f.fields_for @food.destinations.build do |ff| %>
        <%= ff.label :title %>
        <%= ff.text_field :title %>

        <%= ff.label :location %>
        <%= ff.text_field :location %>

        <%= ff.label :content %>
        <%= ff.text_field :content %>

        <%= ff.label :recommendation %>
        <%= ff.text_field :recommendation %>
      <% end %>

      <%= f.submit %>
    <% end %>
  </div>
</div>
